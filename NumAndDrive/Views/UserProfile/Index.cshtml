@using Microsoft.AspNetCore.Identity
@using NumAndDrive.Models
@model NumAndDrive.ViewModels.UserProfile.UserProfileViewModel

@inject UserManager<User> UserManager

<div class="row">
    <div class="col-5">
        <div class="card">
            <div class="card-body text-center">
                <div class="card-img-top bg-secondary">
                    <img src="~/images/profile-pic-white.png" alt="Profile picture" class="img-fluid" />
                </div>
                <p class="card-text" data-bs-toggle="modal" data-bs-target="#modifyUserProfile"><small class="text-body-secondary">Modifier mon profil </small><i class="bi bi-gear"></i></p>
                <h5 class="card-title">@Model.Firstname @Model.Lastname</h5>
                <h6 class="card-subtitle">@Model.DriverType</h6>
                <p class="card-text">Nancy</p>
                <p class="card-text">100% pilote</p>
                <p class="card-text">@Model.Status</p>
                <div>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star-fill"></i>
                    <i class="bi bi-star"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-7">
        <div class="row mb-3">
            <div class="col">
                <div class="card">
                    <div class="card-body text-center">
                        <h3 class="card-title">Mes voyages</h3>
                        <div class="card-group">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Passés</h5>
                                </div>
                                <ul class="list-group list-group-flush" data-bs-spy="scroll">
                                    <li class="list-group-item">A travel <i class="bi bi-caret-right"></i></li>
                                    <li class="list-group-item">A travel <i class="bi bi-caret-right"></i></li>
                                    <li class="list-group-item">A travel <i class="bi bi-caret-right"></i></li>
                                    <li class="list-group-item">A travel <i class="bi bi-caret-right"></i></li>
                                    <li class="list-group-item">A travel <i class="bi bi-caret-right"></i></li>
                                    <li class="list-group-item">A travel <i class="bi bi-caret-right"></i></li>
                                </ul>
                            </div>
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">À venir</h5>
                                </div>
                                <ul class="list-group list-group-flush" data-bs-spy="scroll">
                                    <li class="list-group-item">A travel <i class="bi bi-caret-right"></i></li>
                                    <li class="list-group-item">A travel <i class="bi bi-caret-right"></i></li>
                                    <li class="list-group-item">A travel <i class="bi bi-caret-right"></i></li>
                                    <li class="list-group-item">A travel <i class="bi bi-caret-right"></i></li>
                                    <li class="list-group-item">A travel <i class="bi bi-caret-right"></i></li>
                                    <li class="list-group-item">A travel <i class="bi bi-caret-right"></i></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <h3><i class="bi bi-award"></i> Mes badges et récompenses</h3>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modifyUserProfile" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Modifier mon profil</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @foreach( var status in Model.Statuses)
                {
                    <p>@status.Name</p>
                }
                <div class="dropdown">
                    <ul class="dropdown-menu">
                        @foreach (var status in Model.Statuses)
                        {
                            <li><a class="dropdown-item">@status.Name</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                <button type="button" class="btn btn-primary">Enregister</button>
            </div>
        </div>
    </div>
</div>