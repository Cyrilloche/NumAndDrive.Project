@model NumAndDrive.ViewModels.Account.ResetPasswordViewModel

<h3>Forgot Password</h3>
<br />

@if (Model.IsPasswordRest == true)
{
    <div class="modal fade show" id="forgotPassword" tabindex="-1" aria-labelledby="exampleModalLabel" style="display: block;" aria-modal="true" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Mot de passe réinitialisé avec succès</h1>
                </div>
                <div class="modal-body">
                    <a href="/Home/Index">Cliquez ici pour retourner à la page de connexion</a>
                </div>
            </div>
        </div>
    </div>
}


<div class="card-group align-middle custom-card-border-blue shadow-lg">
    <div class="card p-2">
        <img src="~/images/LOGO - CARPOOL.svg" class="card-img-top img-fluid" />
    </div>
    <div class="card p-2">
        <h3 class="card-title text-center">Mot de passe oublié</h3>
        <form method="post" class="card-text">
            <input type="hidden" value="@Model.Email" />
            <input type="hidden" value="@Model.Token" />
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="Password"></label>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col">
                    <input type="password" asp-for="Password" class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="ConfirmPassword"></label>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col">
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="form-group row mb-1">
                <div class="col text-center">
                    <input type="submit" class="btn submit-blue-button" value="Réinitialiser mot de passe" />
                </div>
            </div>
        </form>
    </div>
</div>
