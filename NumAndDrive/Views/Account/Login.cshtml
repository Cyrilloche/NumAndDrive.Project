@model NumAndDrive.ViewModels.Account.LoginViewModel

<div class="row d-flex justify-content-end align-items-center">
    <div class="col-12 col-md-5 d-flex justify-content-center align-items-center">
        <img src="~/images/LOGO - CARPOOL.svg" alt="Logo de l'application" class="img-fluid img-small" />
    </div>

    <div class="d-none d-md-flex vh-100 col-1 d-flex align-items-center justify-content-end">
        <div class="vh-75 border-end border-dark border-2"></div>
    </div>

    <div class="col-12 col-md-6 d-flex justify-content-center align-items-center">
        <div class="col-xs-10 col-sm-10 col-md-12 col-lg-10 col-xl-8">
            <div class="col rounded-top border border-dark text-custom-color-orange text-uppercase text-center fs-1 fw-bold custom-color-blue p-3">
                <p class="m-0">Portail de connexion</p>
            </div>

            <div class="col rounded-bottom border border-top-0 border-dark px-4 py-2">
                <form method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="row">
                        <div class="col">
                            <label asp-for="UserName" class="col-form-label fs-4 fw-lighter">Adresse mail :</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <input asp-for="UserName" class="bg-white form-control border border-dark rounded-0 custom-inner-shadow" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <span class="text-custom-color-orange" asp-validation-for="UserName"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <label asp-for="Password" class="col-form-label fs-4 fw-lighter">Mot de passe :</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <input asp-for="Password" class="bg-white form-control border border-dark rounded-0 custom-inner-shadow" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <span class="text-custom-color-orange" asp-validation-for="Password"></span>
                        </div>
                    </div>

                    <div class="row my-3">
                        <div class="col-1">
                            <input type="checkbox" class="form-check-input border-dark" />
                        </div>
                        <div class="col-11">
                            <label class="form-check-label">Se souvenir de moi ?</label>
                        </div>
                    </div>

                    <div class="row d-flex justify-content-end">
                        <div class="col-12 col-md-2">
                            <input type="submit" class="btn custom-color-blue text-custom-color-orange custom-bottom-shadow fw-bold fs-4 w-100" value="OK" />
                        </div>
                    </div>
                </form>

                <div class="row">
                    <div class="col text-center">
                        <p type="button" data-bs-toggle="modal" data-bs-target="#forgotPassword" class="link-secondary text-decoration-none">Mot de passe oublié ?</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="forgotPassword" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Vous avez oublié votre mot de passe ?</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <a asp-action="ForgotPassword">Cliquez ici sur le bouton ci-dessous pour créer un lien de réinitialisation</a>
            </div>
        </div>
    </div>
</div>
