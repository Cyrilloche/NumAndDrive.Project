@model NumAndDrive.ViewModels.Account.RegisterViewModel

<h3>User Registration</h3>
<br />
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row mb-3">
            <div class="col-2">
                <label asp-for="@Model.Firstname"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="@Model.Firstname" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Firstname"></span>
        </div>
        <div class="form-group row mb-3">
            <div class="col-2">
                <label asp-for="@Model.Lastname"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="@Model.Lastname" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Lastname"></span>
        </div>
        <div class="form-group row mb-3">
            <div class="col-2">
                <label asp-for="@Model.Email"></label>
            </div>
            <div class="col-5">
                <input type="email" asp-for="@Model.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Email"></span>
        </div>
        <div class="form-group row mb-3">
            <div class="col-2">
                <label asp-for="@Model.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="@Model.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.Password"></span>
        </div>
        <div class="form-group row mb-3">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>