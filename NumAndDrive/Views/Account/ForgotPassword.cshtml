@model NumAndDrive.ViewModels.Account.ForgotPasswordViewModel

<h3>Forgot Password</h3>
<br />

<div class="card-group align-middle shadow-sm">
    <div class="card p-2">
        <img src="~/images/LOGO - CARPOOL.svg" class="card-img-top img-fluid" />
    </div>
    <div class="card p-2">
        <h3 class="card-title text-center">Mot de passe oublié</h3>
        <form method="post" class="card-text">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group row">
                <div class="col">
                    <label asp-for="Email"></label>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col">
                    <input type="text" asp-for="Email" class="form-control" />
                </div>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group row mb-1">
                <div class="col text-center">
                    <input type="submit" class="btn submit-blue-button" value="Réinitialiser mot de passe" />
                </div>
            </div>
        </form>
    </div>
</div>