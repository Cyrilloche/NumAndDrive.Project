@using Microsoft.AspNetCore.Identity
@using NumAndDrive.Models
@model NumAndDrive.Areas.UserArea.ViewModels.UserProfile.UserProfileViewModel

@if (Model != null)
{
    <div class="text-center">
        <div class="row">
            <div class="col-5">
                <div class="d-flex flex-column align-items-center">
                    <img class="col-6 border border-dark border-1 rounded-5 rounded-circle p-3" src="~/images/profile-pic-blue.png" alt="Photo de profil" />
                    <p class="text-custom-color-blue mt-5 mb-0 fw-bold fs-2"><span class="text-uppercase">@Model.Lastname</span> @Model.Firstname</p>
                    <p class="text-custom-color-blue mb-5 fst-italic fs-3 fw-lighter">@Model.DriverType</p>
                    <div class="text-custom-color-blue fs-4 fw-light">
                        @* @if (Model.City != null)
                        {
                            <p>@Model.City</p>
                        }
                        else
                        {
                            <p>Ville non renseignée</p>
                        } *@
                        <a asp-action="Edit" class="card-text text-decoration-none"><small class="text-body-secondary">Modifier mon profil</small><i class="bi bi-gear"></i></a>
                        <p>@Model.Status</p>
                    </div>
                    <img class="col-4 m-5" src="~/images/basic-notation.png" alt="Notes de la communauté" />
                </div>
            </div>
            <div class="col-7">
                <div class="row">
                    <div class="border border-dark rounded-top col">
                        <p class="fs-2 p-2 fw-light m-0">Mes voyages</p>
                    </div>
                </div>
                <div class="row">
                    <div class="border border-dark border-top-0 col">
                        <div class="row">
                            <p class="col-6 border-end border-dark p-2 m-0 fs-2 fw-light">Passés</p>
                            <p class="col-6 p-2 m-0 fs-2 fw-light">À venir</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="border border-dark border-top-0 rounded-bottom col custom-bottom-shadow">
                        <div class="row">
                            <div class="col-6 vh-40 border-end border-dark overflow-auto">
                                @if (Model.CompletedTravels != null && Model.CompletedTravels.Count() > 0)
                                {
                                    foreach (var travel in Model.CompletedTravels)
                                    {
                                        <div class="row d-flex align-items-center border-bottom border-dark p-2">
                                            <div class="col-9">
                                                <p class="m-0 fs-5 fw-light">@travel.DepartureAddress.City > @travel.ArrivalAddress.City</p>
                                                <p class="m-0 fs-5 fw-light">@travel.DepartureTime - @travel.ArrivalTime</p>
                                            </div>
                                            <div class="col-3">
                                                <p class="m-0 fs-1 fw-light text-custom-color-orange">></p>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            <div class="col-6 vh-40 overflow-auto">
                                @if (Model.IncomingTravels != null && Model.IncomingTravels.Count() > 0)
                                {
                                    foreach (var travel in Model.IncomingTravels)
                                    {
                                        <div class="row d-flex align-items-center border-bottom border-dark p-2">
                                            <div class="col-9">
                                                <p class="m-0 fs-5 fw-light">@travel.DepartureAddress.City > @travel.ArrivalAddress.City</p>
                                                <p class="m-0 fs-5 fw-light">@travel.DepartureTime - @travel.ArrivalTime</p>
                                            </div>
                                            <div class="col-3">
                                                <p class="m-0 fs-1 fw-light text-custom-color-orange">></p>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="card border-dark col custom-bottom-shadow">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <img class="col-1 icon-default-height" src="~/images/rewards-icon.png" alt="Récompenses" />
                            <p class="fs-3 col-10 text-custom-color-blue m-0">Mes badges et récompenses</p>
                            <p class="fs-1 text-custom-color-orange col-1 fw-lighter m-0">></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
