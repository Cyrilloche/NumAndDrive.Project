@using Microsoft.AspNetCore.Identity
@using NumAndDrive.Models

@model NumAndDrive.Areas.UserArea.ViewModels.Home.HomeViewModel

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1 class="mb-5 text-center">Bonjour @Model.Firstname ! <br />Vers quel profil navigons-nous aujourd'hui ?</h1>
    <div class="container mb-5">
        <div class="row d-flex justify-content-center">
            <div class="col-6">
                <a asp-controller="Driver" asp-action="Index" class="text-decoration-none">
                    <div class="card custom-color-blue d-flex justify-content-center align-items-center border-0 shadow mb-3 p-2">
                        <div class="card-body">
                            <img src="~/images/profile-pic-white.png" class="card-text m-4" alt="Avatar" width="200">
                            <p class="card-text text-white fs-4 text-center m-5">Conducteur</p>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-6">
                <a asp-controller="Passenger" asp-action="Index" class="text-decoration-none">
                    <div class="card custom-color-orange d-flex justify-content-center align-items-center border-0 shadow mb-3 p-2">
                        <div class="card-body">
                            <img src="~/images/profile-pic-white.png" class="card-text m-4" alt="Avatar" width="200">
                            <p class="card-text text-white fs-4 text-center m-5">Passager</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
