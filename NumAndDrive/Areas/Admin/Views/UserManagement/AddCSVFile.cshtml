@model NumAndDrive.Areas.Admin.ViewModels.UserManagement.AddCSVFileViewModel

@{
    ViewData["Title"] = "Import Users";
}

<h1>Import Users</h1>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-2">
            <h3 class="card-title text-center">Import Users from CSV File</h3>
            <form method="post" asp-action="AddCSVFile" enctype="multipart/form-data">
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="File" class="col-form-label">User data file</label>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col">
                        <input type="file" asp-for="File" class="form-control" accept=".csv" />
                        <span class="text-danger" asp-validation-for="File"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back</a>
                        <input type="submit" class="btn btn-success text-white custom-bottom-shadow" value="Import users" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

