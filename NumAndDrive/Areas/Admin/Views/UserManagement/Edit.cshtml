@model NumAndDrive.Areas.Admin.ViewModels.UserManagement.EditUserManagementViewModel

@{
    ViewData["Title"] = "Edit User";
}

<h1>Edit User</h1>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-2">
            <h3 class="card-title text-center">User Editing</h3>
            <form asp-action="Edit" method="post" class="card-text">
                <input type="hidden" value="@Model.UserId" asp-for="@Model.UserId"/>

                <div class="form-group">
                    <label asp-for="@Model.Lastname" class="control-label">Lastname</label>
                    <input asp-for="@Model.Lastname" class="form-control" />
                    <span asp-validation-for="@Model.Lastname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Firstname" class="control-label">Firstname</label>
                    <input asp-for="@Model.Firstname" class="form-control" />
                    <span asp-validation-for="@Model.Firstname" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Email" class="control-label">Email</label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label>Select a new role</label>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Role</button>
                            <ul class="dropdown-menu">
                                @foreach (var role in Model.Roles)
                                {
                                    <li>
                                        <input class="form-check-input" type="radio" asp-for="@Model.NewRoleId" value="@role.Id" checked="@(role.Id == Model.CurrentRole)" />
                                        <label class="form-check-label" asp-for="@role.Name" value="@role.Id">@role.Name</label>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label>Select a new status</label>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Status</button>
                            <ul class="dropdown-menu">
                                @foreach (var status in Model.Statuses)
                                {
                                    <li>
                                        <input class="form-check-input" type="radio" asp-for="@Model.NewStatusId" value="@status.StatusId" checked="@(status.StatusId == Model.NewStatusId)" />
                                        <label class="form-check-label" asp-for="@status.Name" value="@status.StatusId">@status.Name</label>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col">
                        <label>Select a new Driver Type</label>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Driver Type</button>
                            <ul class="dropdown-menu">
                                @foreach (var driverType in Model.DriverTypes)
                                {
                                    <li>
                                        <input class="form-check-input" type="radio" asp-for="@Model.NewDriverTypeId" value="@driverType.DriverTypeId" checked="@(driverType.DriverTypeId == Model.NewDriverTypeId)" />
                                        <label class="form-check-label" asp-for="@driverType.Name" value="@driverType.DriverTypeId">@driverType.Name</label>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <input type="submit" class="btn btn-primary" value="Save" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

