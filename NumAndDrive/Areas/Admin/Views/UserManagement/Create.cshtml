@model NumAndDrive.Areas.Admin.ViewModels.UserManagement.CreateUserManagementViewModel

@{
    ViewData["Title"] = "Create User";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-2">
            <h3 class="card-title text-center">User Creation</h3>
            <form asp-action="Create" method="post" class="card-text">
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="Email"></label>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col">
                        <input type="text" asp-for="Email" class="form-control" />
                    </div>
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="Password"></label>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col">
                        <input type="password" asp-for="Password" class="form-control" />
                    </div>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="row mb-3">
                    <div class="col">
                        <label>Select a new role</label>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Role</button>
                            <ul class="dropdown-menu">
                                @foreach (var role in Model.Roles)
                                {
                                    <li>
                                        <input class="form-check-input" type="radio" asp-for="@Model.RoleName" value="@role.Name" />
                                        <label class="form-check-label" asp-for="@Model.RoleName" value="@role.Name">@role.Name</label>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <span class="text-danger" asp-validation-for="RoleName"></span>
                </div>
                <div class="form-group row mb-3">
                    <div class="col">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <input type="submit" class="btn btn-primary" value="Create" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

