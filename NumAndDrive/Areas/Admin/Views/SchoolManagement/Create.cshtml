@model NumAndDrive.Areas.Admin.ViewModels.SchoolManagement.CreateSchoolManagementViewModel
@{
    ViewData["Title"] = "Create School";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-2">
            <h3 class="card-title text-center">School Creation</h3>
            <form asp-action="Create" method="post" class="card-text">
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="SchoolName">Name:</label>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col">
                        <input asp-for="SchoolName" class="form-control" />
                    </div>
                    <span class="text-danger" asp-validation-for="SchoolName"></span>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="Street">Street:</label>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col">
                        <input asp-for="Street" class="form-control" />
                    </div>
                    <span class="text-danger" asp-validation-for="Street"></span>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="PostalCode">PostalCode:</label>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col">
                        <input asp-for="PostalCode" class="form-control" />
                    </div>
                    <span class="text-danger" asp-validation-for="PostalCode"></span>
                </div>
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="City">City:</label>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col">
                        <input asp-for="City" class="form-control" />
                    </div>
                    <span class="text-danger" asp-validation-for="City"></span>
                </div>
                <div class="form-group row mb-3">
                    <div class="col">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <input type="submit" class="btn btn-primary" value="Create" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
