@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>

<h1>Role Manager</h1>

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Role Id</td>
                <td>Role Name</td>
                <td>Role Normalize Name</td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach(var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>@role.NormalizedName</td>
                    <td><a class="btn btn-secondary" asp-controller="Role" asp-action="Details" asp-route-id="@role.Id">Details</a></td>
                    <td><a class="btn btn-warning" asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id">Update</a></td>
                    <td><a class="btn btn-danger" asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
