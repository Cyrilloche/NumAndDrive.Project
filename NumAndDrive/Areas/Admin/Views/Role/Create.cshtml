@model NumAndDrive.Areas.Admin.ViewModels.Role.CreateRoleViewModel
@{
    ViewData["Title"] = "Create Role";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-2">
            <h3 class="card-title text-center">Role Creation</h3>
            <form asp-action="Create" method="post" class="card-text">
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="RoleName">Name:</label>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <div class="col">
                        <input asp-for="RoleName" class="form-control" />
                    </div>
                    <span class="text-danger" asp-validation-for="RoleName"></span>
                </div>
                <div class="form-group row mb-3">
                    <div class="col">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <input type="submit" class="btn btn-primary" value="Create" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
